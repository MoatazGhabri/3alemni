<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rqhrp59nkhj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="25dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/uername"
            android:textColor="#000000"
            android:textSize="24sp"
            android:layout_marginTop="18dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Welcome user"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/usericon"
            android:layout_marginTop="12dp"
            android:layout_width="51dp"
            android:layout_height="48dp"
            android:src="@drawable/profile"
            android:scaleType="fitXY"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rs3vvn9v1izc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue"
        android:paddingVertical="19dp"
        android:paddingHorizontal="7dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="14dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/rffo0br0ardf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/r4ph1dxccfel"
                android:layout_width="163dp"
                android:layout_height="105dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="4dp"
                android:text="Start learning"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />
            <ImageView
                android:id="@+id/r33knofftgny"
                android:layout_width="152dp"
                android:layout_height="134dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/image"
                android:scaleType="fitXY"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rz9sw2ew6eue"
            android:layout_width="280dp"
            android:layout_height="39dp"
            android:background="@drawable/white20"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp">

            <ImageView
                android:id="@+id/rpdzs2gtvfac"
                android:layout_width="28dp"
                android:layout_height="25dp"
                android:layout_marginEnd="7dp"
                android:scaleType="fitXY"
                android:src="@drawable/recherche" />

            <EditText
                android:id="@+id/recherche"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:hint="what do you want to learn?"
                android:textColor="#000000"
                android:textColorHint="#747272"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Courses available"
    android:textStyle="bold"
    android:textSize="20dp"
    android:textColor="@color/black"
    android:layout_gravity="center"
    android:layout_marginBottom="1dp"/>
    <HorizontalScrollView
        android:id="@+id/r3lhclkoys91"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFFFF"
        android:fillViewport="true"
        android:paddingTop="1dp"
        android:paddingBottom="-2dp">

        <LinearLayout
            android:id="@+id/coursesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="27dp"
            android:layout_marginBottom="35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:id="@+id/r6oy8qrzefpt"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_marginHorizontal="25dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Teachers"
        />
    <HorizontalScrollView
        android:fillViewport="true"
        android:id="@+id/r3lhclkoys9"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFFFFFFF"
        android:paddingTop="15dp"
        android:paddingBottom="-4dp"
        >

        <LinearLayout
            android:id="@+id/teacherContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginHorizontal="27dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="11dp"
            android:gravity="center_vertical">
            >

        </LinearLayout>
    </HorizontalScrollView>
    <include layout="@layout/bottom_bar_layout" />
</LinearLayout>